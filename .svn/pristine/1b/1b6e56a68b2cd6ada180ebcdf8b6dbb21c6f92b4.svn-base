<include file="public/header" title="出库单详情" body="g4"/>
<include file="public/header_nav" title="出库单详情" href="javascript:history.back(-1)"/>
<script src="__PUBLIC__/static/js/layer/layer.js" type="text/javascript"></script>

<div class="information_dr ma-to-20">
    <div class="maleri30">
        <div class="tit">
            <h2>基本信息</h2>
        </div>
        <div class="xx-list">
            <p class="p">
                <span class="fl">订单编号</span>
                <span class="fr">{$info.order_sn}</span>
            </p>
            <p class="p">
                <span class="fl">购买用户</span>
                <span class="fr">{$info.nickname}</span>
            </p>
            <p class="p">
                <span class="fl">收货客户</span>
                <span class="fr">{$info.consignee}</span>
            </p>
            <p class="p">
                <span class="fl">联系方式</span>
                <span class="fr">{$info.mobile}</span>
            </p>
            <p class="p">
                <span class="fl">收货地址</span>
                <span class="fr">{$info.province}{$info.city}{$info.district}{$info.address}</span>
            </p>
            <p class="p">
                <span class="fl">发货时间</span>
                <span class="fr">{$info.create_time}</span>
            </p>
            <p class="p">
                <span class="fl">配送方式</span>
                <span class="fr">
                    <if condition="$info.shop_way eq 2">工厂店配送</if>
                    <if condition="$info.shop_way eq 3">工厂店自提</if>
                </span>
            </p>

        </div>
    </div>
</div>

<div class="information_dr ma-to-20">
    <div class="maleri30">
        <div class="tit">
            <h2>商品信息</h2>
        </div>
        <div class="ord_list p">
            <div class="maleri30">
                <volist name="goods" id="good">
                    <div class="shopprice">
                        <div class="img_or fl">
                            <a href="{:U('Mobile/Goods/goodsInfo',array('id'=>$good[goods_id]))}">
                                <img src="{$good[goods_id]|goods_thum_images=100,100}"/>
                            </a>
                        </div>
                        <div class="fon_or fl">
                            <a href="{:U('Mobile/Goods/goodsInfo',array('id'=>$good[goods_id]))}">
                                <h2 class="similar-product-text">{$good[goods_name]}</h2>
                            </a>
                        </div>
                        <div class="price_or fr">
                            <p>x{$good['goods_num']}</p>
                        </div>
                    </div>
                </volist>
            </div>
        </div>
    </div>
</div>
</body>
</html>